<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MyTextInputLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/purple_500</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/purple_200</item>
        <item name="boxBackgroundColor">@color/purple_100</item>
        <item name="android:textColorHint">@color/purple_500</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purple_600</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/purple_600</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>